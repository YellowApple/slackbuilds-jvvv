diff -Naur a/patches/xview-fix_dpy_env_var.patch b/patches/xview-fix_dpy_env_var.patch
--- a/patches/xview-fix_dpy_env_var.patch	1969-12-31 19:00:00.000000000 -0500
+++ b/patches/xview-fix_dpy_env_var.patch	2014-04-10 19:31:53.816802750 -0400
@@ -0,0 +1,90 @@
+Index: CHANGELOG
+==================================================================
+--- CHANGELOG
++++ CHANGELOG
+@@ -1,5 +1,8 @@
++xview-3.2p4    TBD
++ - olvwm and olwm now will correctly handle DISPLAY env variable.
++
+ xview-3.2p3    2014.02.13
+  - oledit won't incorrectly display "nothing was found" notice when doing
+    global replace.
+  - Added "Convert CR LF to LF" feature to oledit.
+ 
+
+Index: clients/olvwm-4.1/environ.c
+==================================================================
+--- clients/olvwm-4.1/environ.c
++++ clients/olvwm-4.1/environ.c
+@@ -124,24 +124,24 @@
+     char    *colon, *dot;
+     char    value[128];
+     int len;
+ 
+     if((colon = strrchr(display, ':')) == (char *)NULL)
+-    {
+         return;
+-    }
+ 
+     if((dot = strchr(colon, '.')) != (char *)NULL)
+-    {
+         len = dot - display;
+-    }
+     else
+-    {
+-        len = colon - display;
+-    }
++        /*
++         * dot is missing, so we will use whole value of DISPLAY
++         *
++         * excerpt from the C89 standard:
++         * A negative precision argument is taken as if it were missing.
++         */
++        len = -1;
+ 
+-    (void)sprintf(value, "%*s.%d", len, display, screen);
++    snprintf(value, sizeof(value), "%.*s.%d", len, display, screen);
+ 
+     putEnv(env, "DISPLAY", value);
+ }
+ 
+ #ifndef NOSVENV
+
